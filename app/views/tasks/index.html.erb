<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<table id="tasks">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descrição</th>
      <th>Status</th>
      <th>Data de Conclusão</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr id="<%= dom_id task %>">
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.done %></td>
      <td><%= task.due_date %></td>
      <td>
        <%= link_to "Show", task %>
        <%= link_to "Edit", edit_task_path(task) %>
        <%= button_to "Destroy this task", task, method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path %>
